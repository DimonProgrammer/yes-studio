---
interface Props {
  title: string
  description?: string
  ogImage?: string
  ogType?: string
  canonical?: string
}

const { title, description, ogImage, ogType = 'website', canonical } = Astro.props
const siteUrl = 'https://yes-studio.agency'
const defaultDescription = 'Блог YES Studio — полезные статьи о работе стрим-моделью, доходе, безопасности и лайфстайле.'
const metaDescription = description || defaultDescription
---

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | YES Studio</title>
  <meta name="description" content={metaDescription}>
  {canonical && <link rel="canonical" href={canonical}>}

  <!-- Open Graph -->
  <meta property="og:type" content={ogType}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={metaDescription}>
  <meta property="og:url" content={canonical || `${siteUrl}/blog/`}>
  <meta property="og:site_name" content="YES Studio">
  <meta property="og:locale" content="ru_RU">
  {ogImage && <meta property="og:image" content={ogImage}>}
  {ogImage && <meta property="og:image:width" content="1200">}
  {ogImage && <meta property="og:image:height" content="630">}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={metaDescription}>
  {ogImage && <meta name="twitter:image" content={ogImage}>}

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Forum&family=Manrope:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --bg: #F5F0EB;
      --bg-alt: #E8E2DA;
      --bg-sand: #C8B9A8;
      --bg-dark: #1E1C1A;
      --bg-card: #FFFEFA;
      --text: #2C2926;
      --text-body: #3B3735;
      --text-muted: #AAA89F;
      --text-cream: #F5F0EB;
      --divider: rgba(170, 168, 159, 0.3);
      --accent: #8B1F31;
      --accent-light: #A52840;
      --font: 'Manrope', -apple-system, BlinkMacSystemFont, sans-serif;
      --font-heading: 'Forum', Georgia, 'Times New Roman', serif;
      --section-pad: 120px;
      --container: 1280px;
      --side-pad: 64px;
      --radius-card: 20px;
      --radius-btn: 50px;
      --radius-photo: 20px;
    }

    @media (max-width: 1024px) {
      :root { --side-pad: 32px; --section-pad: 80px; }
    }
    @media (max-width: 768px) {
      :root { --side-pad: 20px; }
    }

    html { font-size: 16px; scroll-behavior: smooth; -webkit-font-smoothing: antialiased; }
    body { font-family: var(--font); background: var(--bg); color: var(--text); line-height: 1.6; }
    a { color: inherit; text-decoration: none; }
    img { max-width: 100%; height: auto; display: block; }

    .container { max-width: var(--container); margin: 0 auto; padding: 0 var(--side-pad); }

    /* ── HEADER ── */
    .header {
      position: fixed; top: 0; left: 0; right: 0;
      height: 64px; z-index: 100;
      display: flex; align-items: center; justify-content: space-between;
      padding: 0 var(--side-pad);
      background: rgba(245, 240, 235, 0.92);
      backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px);
      transition: all 0.4s ease;
    }
    .header-left { display: flex; align-items: center; }
    .header-logo { display: flex; align-items: center; text-decoration: none; }
    .logo-svg { height: 38px; width: auto; color: var(--accent); transition: color 0.4s ease; }

    .header-right { display: flex; align-items: center; gap: 24px; }
    .header-meta { display: flex; align-items: center; gap: 16px; }

    .header-metro {
      display: flex; align-items: center; gap: 5px;
      font-size: 13px; color: rgba(44,41,38,0.5); letter-spacing: 0.02em;
    }
    .header-metro svg { width: 14px; height: 14px; }

    .header-phone {
      display: flex; align-items: center; gap: 6px;
      font-size: 14px; font-weight: 400;
      color: var(--text); text-decoration: none; opacity: 0.6;
      transition: all 0.3s;
    }
    .header-phone:hover { opacity: 1; }
    .pulse-dot {
      width: 6px; height: 6px; background: #e53935;
      border-radius: 50%; animation: pulse-blink 1.5s ease-in-out infinite;
    }
    @keyframes pulse-blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.2; } }

    .header-tg {
      display: flex; align-items: center; justify-content: center;
      width: 36px; height: 36px; border-radius: 10px;
      background: var(--accent); color: var(--text-cream);
      transition: background 0.2s, transform 0.2s; text-decoration: none;
    }
    .header-tg:hover { transform: scale(1.08); background: #9B2537; }
    .header-tg svg { width: 16px; height: 16px; }

    .burger {
      width: 32px; height: 20px; position: relative; cursor: pointer;
      display: flex; flex-direction: column; justify-content: space-between;
    }
    .burger span {
      display: block; height: 2px; width: 100%;
      background: var(--text); border-radius: 2px; transition: all 0.4s;
    }
    .burger span:nth-child(2) { width: 70%; }

    /* ── NAV OVERLAY ── */
    .nav-overlay {
      position: fixed; inset: 0; background: var(--bg-dark);
      z-index: 200; display: flex; align-items: center; justify-content: center;
      opacity: 0; pointer-events: none; transition: opacity 0.45s ease;
    }
    .nav-overlay.open { opacity: 1; pointer-events: all; }
    .nav-overlay-close {
      position: absolute; top: 22px; right: var(--side-pad);
      width: 32px; height: 32px; cursor: pointer;
      display: flex; align-items: center; justify-content: center;
    }
    .nav-overlay-close svg { stroke: var(--text-cream); width: 24px; height: 24px; }
    .nav-content { display: flex; flex-direction: column; align-items: center; gap: 40px; }
    .nav-links { display: flex; flex-direction: column; gap: 20px; text-align: center; }
    .nav-links a {
      font-size: 24px; font-weight: 400; color: var(--text-cream);
      text-decoration: none; letter-spacing: 0.02em; opacity: 0.7; transition: opacity 0.3s;
    }
    .nav-links a:hover { opacity: 1; }
    .nav-metro-overlay {
      display: none; align-items: center; gap: 8px; margin-top: 32px;
      font-size: 14px; color: rgba(245,240,235,0.45); font-weight: 400;
    }
    .nav-metro-overlay svg { opacity: 0.5; }

    /* ── FOOTER ── */
    .site-footer {
      background: var(--bg-dark);
      padding: 48px 0 32px;
      border-top: 1px solid rgba(139, 31, 49, 0.15);
      margin-top: 0;
    }
    .footer-inner {
      display: flex; justify-content: space-between; align-items: flex-start;
      gap: 40px; margin-bottom: 32px;
    }
    .footer-brand { max-width: 200px; }
    .footer-brand svg { height: 28px; width: auto; color: var(--text-cream); opacity: 0.5; }
    .footer-brand p {
      font-size: 12px; color: rgba(245,240,235,0.3);
      margin-top: 12px; line-height: 1.5;
    }
    .footer-links-wrap { display: flex; gap: 48px; }
    .footer-col h4 {
      font-size: 12px; font-weight: 600; letter-spacing: 0.08em;
      text-transform: uppercase; color: rgba(245,240,235,0.3); margin-bottom: 12px;
    }
    .footer-col a {
      display: block; font-size: 14px; color: rgba(245,240,235,0.6);
      text-decoration: none; margin-bottom: 8px; transition: color 0.2s;
    }
    .footer-col a:hover { color: var(--text-cream); }
    .footer-contact a {
      display: flex; align-items: center; gap: 8px;
      font-size: 14px; color: rgba(245,240,235,0.6);
      text-decoration: none; margin-bottom: 10px; transition: color 0.2s;
    }
    .footer-contact a:hover { color: var(--text-cream); }
    .footer-contact svg { width: 16px; height: 16px; flex-shrink: 0; }
    .footer-disclaimer {
      font-size: 12px; color: rgba(245,240,235,0.3); line-height: 1.7;
      text-align: center; max-width: 700px; margin: 40px auto 24px;
      padding-top: 32px; border-top: 1px solid rgba(245,240,235,0.08);
    }
    .footer-legal {
      display: flex; justify-content: center; gap: 24px;
      flex-wrap: wrap; margin-bottom: 24px;
    }
    .footer-legal a {
      font-size: 12px; color: rgba(245,240,235,0.25);
      text-decoration: none; transition: color 0.3s;
    }
    .footer-legal a:hover { color: rgba(245,240,235,0.5); }
    .footer-bottom {
      border-top: 1px solid rgba(245,240,235,0.06);
      padding-top: 20px; display: flex; justify-content: space-between;
      align-items: center; font-size: 12px; color: rgba(245,240,235,0.2);
    }

    /* ── MAIN CONTENT AREA ── */
    .blog-main { padding-top: 64px; min-height: 70vh; }

    /* ── RESPONSIVE ── */
    @media (max-width: 1024px) {
      .footer-inner { flex-direction: column; }
      .footer-links-wrap { flex-direction: column; gap: 24px; }
    }
    @media (max-width: 768px) {
      .header-meta { display: none; }
      .nav-metro-overlay { display: flex; }
      .footer-bottom { flex-direction: column; gap: 8px; text-align: center; }
    }
  </style>
</head>
