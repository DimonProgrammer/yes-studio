---
import BlogLayout from '../layouts/BlogLayout.astro'
import BlogCard from '../components/BlogCard.astro'
import CategoryFilter from '../components/CategoryFilter.astro'
import { getAllPosts, getAllCategories, getPostsByCategory } from '../lib/sanity'

const categories = await getAllCategories()
const categoryParam = Astro.url.searchParams.get('category')

let posts
let activeCategory = undefined

if (categoryParam) {
  posts = await getPostsByCategory(categoryParam)
  activeCategory = categoryParam
} else {
  posts = await getAllPosts()
}
---

<BlogLayout
  title="Блог YES Studio — статьи о работе стрим-моделью"
  description="Полезные статьи о работе стрим-моделью: карьера, доход, безопасность и лайфстайл. Честные ответы на все вопросы."
  canonical="https://yes-studio.agency/blog/"
>
  <!-- Section: Hero -->
  <section class="section blog-hero-section">
    <div class="blog-container">
      <div class="section-header">
        <span class="label label--accent">Блог</span>
        <h1 class="h2">Блог <span class="h-accent">YES Studio</span></h1>
        <p class="section-lead">
          Пошаговые гайды и инсайты для стрим-моделей всех уровней: как начать, профессионально расти и увеличить доход. От новичков к топ-моделям YES Studio.
        </p>
      </div>

      <!-- Category Filter -->
      <CategoryFilter categories={categories} activeCategory={activeCategory} />

      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="bento" id="blogBento">
          {posts.map((post: any) => (
            <BlogCard post={post} />
          ))}
        </div>
      ) : (
        <div class="bento blog-bento-empty" id="blogBento">
          <div class="blog-card blog-card--skeleton"><div class="blog-card__visual"></div><div class="blog-card__body"><div class="skel skel--tag"></div><div class="skel skel--title"></div><div class="skel skel--text"></div><div class="skel skel--meta"></div></div></div>
          <div class="blog-card blog-card--skeleton"><div class="blog-card__visual"></div><div class="blog-card__body"><div class="skel skel--tag"></div><div class="skel skel--title"></div><div class="skel skel--text"></div><div class="skel skel--meta"></div></div></div>
          <div class="blog-card blog-card--skeleton"><div class="blog-card__visual"></div><div class="blog-card__body"><div class="skel skel--tag"></div><div class="skel skel--title"></div><div class="skel skel--text"></div><div class="skel skel--meta"></div></div></div>
        </div>
      )}
    </div>
  </section>

  <!-- Section: CTA -->
  <section class="section section--dark blog-cta-section">
    <div class="blog-container">
      <div class="blog-cta__inner">
        <span class="label label--accent-dark">Начать</span>
        <h2 class="h2 h2--cream">Хочешь начать зарабатывать?</h2>
        <p class="blog-cta__text">Оставь заявку — мы расскажем всё на личной встрече</p>
        <a href="https://t.me/studio_yes" class="btn btn--cream">
          <svg class="btn__tg-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 6.8c-.15 1.58-.8 5.42-1.13 7.19-.14.75-.42 1-.68 1.03-.58.05-1.02-.38-1.58-.75-.88-.58-1.38-.94-2.23-1.5-.99-.65-.35-1.01.22-1.59.15-.15 2.71-2.48 2.76-2.69.01-.03.01-.14-.07-.2-.08-.06-.19-.04-.27-.02-.12.03-1.99 1.27-5.62 3.72-.53.36-1.01.54-1.44.53-.47-.01-1.38-.27-2.06-.49-.83-.27-1.49-.42-1.43-.88.03-.24.37-.49 1.02-.75 3.98-1.73 6.64-2.88 7.97-3.44 3.8-1.58 4.59-1.86 5.1-1.87.11 0 .37.03.54.17.14.12.18.28.2.47-.01.06.01.24 0 .37z"/></svg>
          Написать в Telegram
        </a>
      </div>
    </div>
  </section>

  <!-- Client-side refresh: ensures blog index always shows latest Sanity content -->
  <script>
    (function () {
      var PROJECT_ID = 'n2knh3st';
      var DATASET = 'production';
      var loaded = false;

      var urlParams = new URLSearchParams(window.location.search);
      var categoryFilter = urlParams.get('category');

      var groq = categoryFilter
        ? '*[_type == "post" && category->slug.current == $cat] | order(publishedAt desc) { title, slug, excerpt, coverImage, publishedAt, "category": category->{ title, slug }, "readTime": round(length(pt::text(body)) / 1200) }'
        : '*[_type == "post"] | order(publishedAt desc) { title, slug, excerpt, coverImage, publishedAt, "category": category->{ title, slug }, "readTime": round(length(pt::text(body)) / 1200) }';

      var params = categoryFilter ? '&$cat="' + encodeURIComponent(categoryFilter) + '"' : '';
      var query = encodeURIComponent(groq);
      var url = 'https://' + PROJECT_ID + '.apicdn.sanity.io/v2024-01-01/data/query/' + DATASET + '?query=' + query + params;

      function esc(s) { var d = document.createElement('div'); d.textContent = s; return d.innerHTML; }

      function sanityImageUrl(img) {
        if (!img || !img.asset || !img.asset._ref) return '';
        var parts = img.asset._ref.split('-');
        return 'https://cdn.sanity.io/images/' + PROJECT_ID + '/' + DATASET + '/' + parts[1] + '-' + parts[2] + '.' + parts[3] + '?w=600&h=400&fit=crop&auto=format';
      }

      function formatDate(d) {
        if (!d) return '';
        return new Date(d).toLocaleDateString('ru-RU', { day: 'numeric', month: 'long', year: 'numeric' });
      }

      function renderCard(p) {
        var slug = p.slug && p.slug.current ? encodeURIComponent(p.slug.current) : '';
        var title = esc(p.title || '');
        var imgUrl = sanityImageUrl(p.coverImage);
        var imgHtml = imgUrl
          ? '<img src="' + imgUrl + '" alt="' + title.replace(/"/g, '&quot;') + '" loading="lazy" width="600" height="400">'
          : '<div class="blog-card__placeholder"></div>';
        var catHtml = p.category ? '<span class="blog-card__tag">' + esc(p.category.title) + '</span>' : '';
        var metaHtml = '<span>' + formatDate(p.publishedAt) + '</span>' + (p.readTime ? ' &middot; ' + p.readTime + ' мин' : '');
        var descHtml = p.excerpt ? '<p class="blog-card__desc">' + esc(p.excerpt) + '</p>' : '';

        return '<a href="/blog/' + slug + '/" class="blog-card">'
          + '<div class="blog-card__visual">' + imgHtml + '</div>'
          + '<div class="blog-card__body">' + catHtml + '<h3 class="blog-card__title">' + title + '</h3>' + descHtml + '<div class="blog-card__meta">' + metaHtml + '</div></div>'
          + '</a>';
      }

      // Timeout: if fetch takes > 6s on empty grid, show fallback message
      setTimeout(function () {
        if (loaded) return;
        var grid = document.getElementById('blogBento');
        if (grid && grid.classList.contains('blog-bento-empty')) {
          grid.innerHTML = '<div class="blog-empty"><p>Статьи скоро появятся. Подпишись на наш <a href="https://t.me/studio_yes">Telegram</a>, чтобы не пропустить!</p></div>';
        }
      }, 6000);

      fetch(url)
        .then(function (r) { return r.json(); })
        .then(function (data) {
          loaded = true;
          var posts = data.result;
          if (!posts || !posts.length) return;
          var grid = document.getElementById('blogBento');
          if (!grid) return;
          grid.innerHTML = posts.map(renderCard).join('');
          grid.classList.remove('blog-bento-empty');
        })
        .catch(function () { loaded = true; }); // silently fail — static content remains
    })();
  </script>

  <!-- Schema.org -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "Блог YES Studio",
    "description": "Полезные статьи о работе стрим-моделью",
    "url": "https://yes-studio.agency/blog/",
    "publisher": {
      "@type": "Organization",
      "name": "YES Studio",
      "url": "https://yes-studio.agency/"
    }
  })} />
</BlogLayout>

<style>
  /* ── Blog Container ── */
  .blog-container {
    max-width: 1080px;
    margin: 0 auto;
    padding: 0 var(--side-pad);
  }

  /* ── Section patterns ── */
  .section { padding: var(--section-pad) 0; }
  .section--dark { background: var(--bg-dark); }

  .section-header { margin-bottom: 48px; }
  .section-header .label { margin-bottom: 12px; display: block; }

  .label {
    font-size: 11px; font-weight: 500;
    letter-spacing: 0.12em; text-transform: uppercase;
    color: var(--text-muted);
  }
  .label--accent { color: var(--accent); }
  .label--accent-dark { color: rgba(245, 240, 235, 0.4); }

  .h2 {
    font-family: var(--font-heading);
    font-size: clamp(32px, 3.5vw, 48px);
    font-weight: 400; line-height: 1.1;
    letter-spacing: 0.02em; text-transform: uppercase;
    color: var(--accent); margin-bottom: 16px;
  }
  .h-accent { color: rgba(245, 240, 235, 0.35); }
  .h2--cream { color: var(--text-cream); }
  .h2--cream .h-accent { color: rgba(245, 240, 235, 0.35); }

  .section-lead {
    font-size: 15px; font-weight: 400;
    line-height: 1.65; color: var(--text-body);
    max-width: 520px;
  }

  /* ── Blog Hero ── */
  .blog-hero-section { padding-top: 160px; }

  /* ── Grid ── */
  .bento {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .blog-empty {
    text-align: center; padding: 40px 20px;
    font-size: 15px; color: var(--text-muted);
    line-height: 1.65;
  }
  .blog-empty a { color: var(--accent); text-decoration: underline; }

  /* Skeleton loading state */
  @keyframes shimmer {
    0% { background-position: -400px 0; }
    100% { background-position: 400px 0; }
  }
  .skel {
    background: linear-gradient(90deg, rgba(139,31,49,0.12) 25%, rgba(139,31,49,0.28) 50%, rgba(139,31,49,0.12) 75%);
    background-size: 800px 100%;
    animation: shimmer 1.4s infinite linear;
    border-radius: 4px;
  }
  .skel--tag { height: 24px; width: 80px; margin-bottom: 4px; }
  .skel--title { height: 18px; width: 90%; margin-bottom: 6px; }
  .skel--text { height: 14px; width: 75%; margin-bottom: 4px; }
  .skel--meta { height: 12px; width: 50%; margin-top: 8px; }
  .blog-card--skeleton .blog-card__visual {
    aspect-ratio: 3 / 2;
    background: rgba(139,31,49,0.08);
  }
  .blog-card--skeleton .blog-card__body { gap: 10px; }

  /* ── CTA Section ── */
  .blog-cta-section { position: relative; overflow: hidden; }
  .blog-cta__inner { text-align: center; }
  .blog-cta__text {
    font-size: 15px; color: rgba(245,240,235,0.7);
    margin-bottom: 32px; line-height: 1.65;
  }

  /* ── Button ── */
  .btn {
    display: inline-flex; align-items: center; gap: 8px;
    padding: 15px 40px;
    font-family: var(--font); font-size: 12px; font-weight: 500;
    letter-spacing: 0.1em; text-transform: uppercase;
    border: none; border-radius: var(--radius-btn);
    cursor: pointer; text-decoration: none; transition: all 0.3s ease;
  }
  .btn--cream {
    background: var(--text-cream); color: var(--text);
  }
  .btn--cream:hover { opacity: 0.88; transform: translateY(-1px); }
  .btn__tg-icon { width: 16px; height: 16px; flex-shrink: 0; }

  /* ── Responsive ── */
  @media (max-width: 1024px) {
    .bento { grid-template-columns: 1fr 1fr; }
  }
  @media (max-width: 640px) {
    .bento { grid-template-columns: 1fr; }
  }
  @media (max-width: 768px) {
    .h2 { font-size: clamp(28px, 7vw, 48px); }
    .blog-hero-section { padding-top: 120px; }
  }
  @media (max-width: 480px) {
    .blog-container { padding: 0 16px; }
  }
</style>
