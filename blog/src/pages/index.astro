---
import BlogLayout from '../layouts/BlogLayout.astro'
import BlogCard from '../components/BlogCard.astro'
import CategoryFilter from '../components/CategoryFilter.astro'
import { getAllPosts, getAllCategories } from '../lib/sanity'

const posts = await getAllPosts()
const categories = await getAllCategories()
---

<BlogLayout
  title="Блог YES Studio — статьи о работе стрим-моделью"
  description="Полезные статьи о работе стрим-моделью: карьера, доход, безопасность и лайфстайл. Честные ответы на все вопросы."
  canonical="https://yes-studio.agency/blog/"
>
  <div class="container">
    <!-- Hero -->
    <section class="blog-hero">
      <h1 class="blog-hero__title">Блог YES Studio</h1>
      <p class="blog-hero__subtitle">
        Полезные статьи о работе стрим-моделью: карьера, доход, безопасность и лайфстайл.
      </p>
    </section>

    <!-- Category Filter -->
    <CategoryFilter categories={categories} />

    <!-- Posts Grid -->
    {posts.length > 0 ? (
      <div class="blog-grid">
        {posts.map((post: any) => (
          <BlogCard post={post} />
        ))}
      </div>
    ) : (
      <div class="blog-empty">
        <p>Статьи скоро появятся. Подпишись на наш <a href="https://t.me/studio_yes">Telegram</a>, чтобы не пропустить!</p>
      </div>
    )}

    <!-- CTA Block -->
    <section class="blog-cta">
      <div class="blog-cta__inner">
        <h2 class="blog-cta__title">Хочешь начать зарабатывать?</h2>
        <p class="blog-cta__text">Оставь заявку — мы расскажем всё на личной встрече</p>
        <a href="https://t.me/studio_yes" class="blog-cta__button">Написать в Telegram</a>
      </div>
    </section>
  </div>

  <!-- Schema.org -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "Блог YES Studio",
    "description": "Полезные статьи о работе стрим-моделью",
    "url": "https://yes-studio.agency/blog/",
    "publisher": {
      "@type": "Organization",
      "name": "YES Studio",
      "url": "https://yes-studio.agency/"
    }
  })} />
</BlogLayout>

<style>
  .blog-hero {
    text-align: center;
    padding: 60px 0 48px;
  }
  .blog-hero__title {
    font-family: var(--font-heading);
    font-size: clamp(2.2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 16px;
  }
  .blog-hero__subtitle {
    font-size: 1.1rem;
    color: var(--text-body);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.65;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .blog-empty {
    text-align: center;
    padding: 80px 0;
    font-size: 1.1rem;
    color: var(--text-muted);
  }
  .blog-empty a { color: var(--accent); text-decoration: underline; }

  .blog-cta {
    margin: 80px 0 40px;
  }
  .blog-cta__inner {
    background: var(--bg-dark);
    color: var(--text-cream);
    text-align: center;
    padding: 64px 40px;
    border-radius: var(--radius-card);
  }
  .blog-cta__title {
    font-family: var(--font-heading);
    font-size: clamp(1.6rem, 3vw, 2.4rem);
    margin-bottom: 12px;
  }
  .blog-cta__text {
    font-size: 1rem;
    color: var(--text-muted);
    margin-bottom: 28px;
  }
  .blog-cta__button {
    display: inline-block;
    background: var(--accent);
    color: #fff;
    padding: 14px 36px;
    border-radius: var(--radius-btn);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    transition: background 0.2s;
  }
  .blog-cta__button:hover { background: var(--accent-light); }

  @media (max-width: 1024px) {
    .blog-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 640px) {
    .blog-grid { grid-template-columns: 1fr; gap: 24px; }
  }
</style>
